@model List<Mensaje>

<h1>Mensajes</h1>

<div class="row">
    <div class="col-md-6">
        <h2 class="text-center">Twitter</h2>
        @if (Model.Any(m => m.medioEnvio == "twitter"))
        {
            @foreach (var mensaje in Model.Where(m => m.medioEnvio == "twitter"))
            {
                <div class="card m-3">
                    <div class="card-header">
                        <p class="card-text">De: @mensaje.remitente</p>
                    </div>
                    <div class="card-body">

                        <p class="card-text">Mensaje: @mensaje.mensaje</p>

                    </div>
                    <div class="card-footer">

                        <p class="card-text">Para: @mensaje.destinatario</p>
                    </div>

                </div>
            }
        }
        else
        {
            <p>No se encontraron mensajes de Twitter.</p>
        }
    </div>
    <div class="col-md-6">
        <h2 class="text-center">Email</h2>
        @if (Model.Any(m => m.medioEnvio == "email"))
        {
            @foreach (var mensaje in Model.Where(m => m.medioEnvio == "email"))
            {
                <div class="card m-3">
                    <div class="card-header">
                        <p class="card-text">De: @mensaje.remitente</p>
                    </div>
                    <div class="card-body">
                      
                        <p class="card-text">Mensaje: @mensaje.mensaje</p>
                        
                    </div>
                    <div class="card-footer">

                        <p class="card-text">Para: @mensaje.destinatario</p>
                    </div>

                </div>
            }
        }
        else
        {
            <p>No se encontraron mensajes de Email.</p>
        }
    </div>
</div>
